syntax on

set expandtab
set shiftwidth=4
set tabstop=4
set autoindent
set smarttab

set foldmethod=indent
set foldnestmax=3
set nofoldenable

set encoding=utf-8
set fileencodings=utf8,ucs-bom,gbk,cp936,gb2312,gb18030

set lazyredraw

set laststatus=2
set ruler
set cursorline
set number
set noerrorbells
set visualbell
set mouse=a
set title

set history=1000
"set spell
set confirm

set hlsearch
set ignorecase
set smartcase
